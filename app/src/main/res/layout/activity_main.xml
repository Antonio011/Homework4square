<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f94878"
        tools:context=".MainActivity">

    <EditText
            android:layout_width="312dp"
            android:layout_height="65dp"
            android:id="@+id/localita"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:textSize="24sp"
            app:layout_constraintHorizontal_bias="0.161" app:layout_constraintVertical_bias="0.316"
            android:hint="Inserisci la localitÃ  dove cercare ristoranti"
            android:background="@android:color/transparent"
            android:textColor="#FFFFFF"/>
    <ImageView
            android:layout_width="63dp"
            android:layout_height="60dp" app:srcCompat="@android:drawable/ic_menu_send"
            android:id="@+id/ricerca"
            android:contentDescription="invio"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:textSize="24sp"
            app:layout_constraintHorizontal_bias="0.954" app:layout_constraintVertical_bias="0.314"/>

    <TextView
            android:text=""
            android:layout_width="343dp"
            android:layout_height="377dp"
            android:id="@+id/risultati"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:textSize="18sp"
            app:layout_constraintHorizontal_bias="0.22" app:layout_constraintVertical_bias="0.881"
            android:textColor="#FFFFFF"/>
    <ImageView
            android:layout_width="380dp"
            android:layout_height="161dp" app:srcCompat="@drawable/foursquarelogoideas"
            android:id="@+id/imageView2" android:contentDescription="logo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:textSize="24sp"
            app:layout_constraintHorizontal_bias="0.483" app:layout_constraintVertical_bias="0.028"/>

</android.support.constraint.ConstraintLayout>